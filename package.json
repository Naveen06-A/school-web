{
  "name": "school-management",
  "version": "1.0.0",
  "description": "School Management System with React Native and Web",
  "scripts": {
    "install-all": "npm install && cd backend && npm install && cd ../mobile && npm install && cd ../web && npm install",
    "start-backend": "cd backend && npm start",
    "start-mobile": "cd mobile && npm start",
    "start-web": "cd web && npm start",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-web\""
  },
  "devDependencies": {
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/react-native": "^0.72.8",
    "@types/react-navigation": "^3.0.8",
    "concurrently": "^7.6.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/native-stack": "^7.3.26",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-native-safe-area-context": "^5.6.1",
    "react-native-screens": "^4.16.0"
  }
}
